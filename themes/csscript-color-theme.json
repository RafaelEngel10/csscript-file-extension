{
  "name": "CSScript Theme",
  "type": "dark-modern",
  "colors": {
    "editor.foreground": "#D4D4D4",
    "editor.background": "#1E1E1E"
  },
  "tokenColors": [
    {
      // Elements (div, p, etc.)
      "scope": "entity.name.tag.cssc",
      "settings": {
        "foreground": "#569CD6", 
        "fontStyle": "bold"
      }
    },
    {
      // Class (.class)
      "scope": "entity.other.attribute-name.class.cssc",
      "settings": {
        "foreground": "#D7BA7D" 
      }
    },
    {
      // IDs (#id)
      "scope": "entity.other.attribute-name.id.cssc",
      "settings": {
        "foreground": "#9CDCFE" 
      }
    },
    {
      // @async orphan
      "scope": "entity.orphan.element-name.async.cssc",
      "settings": {
        "foreground": "#f09cf3"
      }
    },
    {
      // Events (window.onLoad, reveal.onScroll, onActivate, etc.)
      "scope": "keyword.control.event.cssc",
      "settings": {
        "foreground": "#C586C0", 
        "fontStyle": "italic"
      }
    },
    {
      // Parameters and properties (text, background-color, origin, etc.)
      "scope": "support.constant.property-name.cssc",
      "settings": {
        "foreground": "#6919c5",
      }
    },
    {
      // Functions/animations (fall, fadeIn, rise, etc.)
      "scope": "support.function.animation.cssc",
      "settings": {
        "foreground": "#DCDCAA"
      }
    },
    {
      // Comments
      "scope": [
        "comment.line.double-slash.cssc",
        "comment.block.cssc"
      ],
      "settings": {
        "foreground": "#6A9955",
        "fontStyle": "italic"
      }
    },
    {
      // Punctuation, braces, and delimiters
      "scope": [
        "punctuation.definition.block.cssc",
        "punctuation.section.block.begin.cssc",
        "punctuation.section.block.end.cssc"
      ],
      "settings": {
        "foreground": "#D4D4D4",
      }
    }
  ]
}