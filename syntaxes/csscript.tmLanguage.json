{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CSScript",
  "patterns": [
    {
      "name": "entity.name.tag.cssc",
      "match": "^[a-zA-Z][a-zA-Z0-9_-]*(?=\\s*\\{)"
    },
    {
      "name": "entity.attribute-name.class.cssc",
      "match": "\\.[a-zA-Z_][\\w-]*(?=\\s*\\{)"
    },
    {
      "name": "entity.other.attribute-name.id.cssc",
      "match": "#[a-zA-Z_][\\w-]*(?=\\s*\\{)"
    },
    {
      "name": "keyword.control.event.cssc",
      "match": "\\b(window.onLoad|DOMContent.onLoad|reveal.onScroll|hide.onScroll|onSing.click|onDbl.click|onHold.click)\\b"
    },
    {
      "name": "support.constant.property-name.cssc",
      "match": "\\(\\b(color|background-color|text|message|radius|gap|weight|brightness|request)*(?=\\s*\\:)\\b\\)"
    }, 
    {
      "name": "support.function.animation.cssc",
      "match": "\\b(fadeIn|fadeOut|slideIn|slideOut|fall|rise||pop|implode|shake|create|shiver|fadeColor|chameleonCamo|octopusCamo|paint|suddenChange|bloomGap|stagedGapColumn|stagedGapRow|skinny|heavy)\\b"
    },
    {
      "name": "comment.line.double-slash.cssc",
      "match": "//.*$"
    },
    {
      "name": "comment.block.cssc",
      "begin": "/\\*",
      "end": "\\*/"
    }
  ],
  "scopeName": "source.cssc"
}
